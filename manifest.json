{
  "manifest_version": 3,
  "name": "Miacademy Element Hider",
  "version": "1.0.0",
  "description": "Hide specific elements on Miacademy.co based on your preferences",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://miacademy.co/*",
    "https://www.miacademy.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://miacademy.co/*",
        "https://www.miacademy.co/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

